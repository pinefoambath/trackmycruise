<div class="container" id="new-trip-container">
  <div>
    <h1>Get past sailing weather</h1>
  </div>

  <div class="date-select">
    <%= simple_form_for @trip do |f| %>
      <%= f.input :date, label: "Pick a date and time", as: :string, input_html: {class: "datepicker"} %>

      <div class="map">
        <div id="map"
               style="width: 100%; height: 500px;"
               data-markers="<%= @markers.to_json %>"
               data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
          </div>
          <pre id="coordinates" class="coordinates"></pre>
      </div>

      <btn class="animated bounceIn btn btn-new-trip mt-2" data-toggle="modal" data-target="#exampleModal" id="getweather" data-stormglass-api-key="<%= ENV['STORMGLASS_API_KEY'] %>"> Get My Weather </btn>
       <%= f.input :longitude, as: :hidden %>
       <%= f.input :latitude, as: :hidden %>
    <% end %>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>

