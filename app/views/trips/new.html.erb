<h1>Fetch my Weather</h1>


<div class="new_container">
  <div class="map_new">
    <p>This is where the map goes</p>
  </div>
  <div class="select_data">
    <p> Select a location on the map to the left, and pick a date and time below: <p>
    <%= simple_form_for @trip do |f| %>
      <%= f.input :longitude, as: :hidden %>
      <%= f.input :latitude, as: :hidden %>
      <%= f.input :date %>
      <%= f.input :time %>
      <div class="btn" id="getweather">Get My Weather</div>
      <%= f.input :wave_height %>
      <%= f.input :wave_length %>
      <%= f.input :wind_speed %>
      <%= f.input :wind_gusts %>
      <%= f.input :air_temperature%>
      <%= f.input :sea_temperature %>
      <%= f.button :submit, class: "btn-primary" %>
    <% end %>
  </div>

</div>

